<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/addpostcard_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postcard name"
        android:textIsSelectable="false" />
    
    <EditText
        android:id="@+id/addpostcard_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:inputType="text" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/addpostcard_takepicture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take a picture" />
    </LinearLayout>

    <ListView
        android:id="@+id/addpostcard_recipients_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/addpostcard_addrecipient_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add another recipient" />
    
    <Button
        android:id="@+id/addpostcard_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to recipients" />
    
</LinearLayout>